<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="247dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/bookingButton"
        style="@style/mainButtonStyle"
        android:layout_width="145dp"
        android:layout_height="121dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#2E2E51"
        android:onClick="createBooking"
        android:text="@string/bookingButton"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/tableManagement"
        style="@style/mainButtonStyle"
        android:layout_width="145dp"
        android:layout_height="121dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2E2E51"
        android:onClick="createTableManagement"
        android:text="@string/tableManagmeent"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingButton" />

    <Button
        android:id="@+id/bookingManagement"
        style="@style/mainButtonStyle"
        android:layout_width="145dp"
        android:layout_height="121dp"
        android:layout_marginStart="64dp"

        android:layout_marginTop="84dp"
        android:layout_marginEnd="42dp"
        android:backgroundTint="#2E2E51"

        android:text="@string/bookingManagement"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookingButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>