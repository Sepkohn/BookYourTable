<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".table.MainTableManagement">


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTables"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:checkable="true"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        android:verticalScrollbarPosition="defaultPosition"
        app:chipSpacingHorizontal="40dp"
        app:chipSpacingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true"
        tools:layout_editor_absoluteY="107dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/T1"
            style="@style/ChipTableManagement"
            android:text="T01"
            android:visibility="visible"
            tools:visibility="visible" />

        <com.google.android.material.chip.Chip
            android:id="@+id/T2"
            style="@style/ChipTableManagement"
            android:text="T02" />

        <com.google.android.material.chip.Chip
            android:id="@+id/T3"
            style="@style/ChipTableManagement"
            android:text="T03" />

        <com.google.android.material.chip.Chip
            android:id="@+id/T4"
            style="@style/ChipTableManagement"
            android:text="T04" />

        <com.google.android.material.chip.Chip
            android:id="@+id/T5"
            style="@style/ChipTableManagement"
            android:text="T05" />

        <com.google.android.material.chip.Chip
            android:id="@+id/T6"
            style="@style/ChipTableManagement"
            android:text="T06" />
    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="169dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="Ajouter"
            app:layout_constraintBottom_toTopOf="@+id/buttonDelete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Suprimer"
            app:layout_constraintBottom_toTopOf="@+id/buttonDesactivate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonDesactivate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:text="dÃ©sactiver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>